<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/add" method="POST">
                    <div class="form-group p-2">
                        <input type="text" class="form-control" name="title" placeholder="Title" autofocus>
                    </div>
                    <div class="form-group p-2">
                        <input type="url" name="url" class="form-control" placeholder="URL">
                    </div>
                    <div class="form-group p-2">
                        <textarea name="description" rows="2" class="form-control" placeholder="Description"></textarea>
                    </div>

                    <div class="form-group d-grid gap-2 d-md-block">
                        <button class="btn btn-success btn-block">
                            Save
                        </button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>